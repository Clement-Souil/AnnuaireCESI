<Window x:Class="AnnuaireApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Affichage du titre depuis MainViewModel -->
            <TextBlock Text="{Binding Titre}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Bouton qui change le titre -->
            <Button Content="Changer le titre" Command="{Binding ChangerTitreCommand}" Padding="10" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
